{
  "name": "surplus",
  "displayName": "surplus",
  "publisher": "Surplus",
  "description": "Manage tasks, track expenses, and monitor investments within VS Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/SaqAsh/Surplus"
  },
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "resources/upscaled_logo_enhanced.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "surplus-sidebar",
          "title": "Surplus",
          "icon": "resources/dark.png"
        }
      ]
    },
    "views": {
      "surplus-sidebar": [
        {
          "type": "webview",
          "id": "surplus.dashboardView",
          "name": "Dashboard"
        }
      ]
    },
    "commands": [
      {
        "command": "surplus.login",
        "title": "Surplus: Login"
      },
      {
        "command": "surplus.logout",
        "title": "Surplus: Logout"
      },
      {
        "command": "surplus.addTask",
        "title": "Surplus: Add Task"
      },
      {
        "command": "surplus.addExpense",
        "title": "Surplus: Add Expense"
      },
      {
        "command": "surplus.viewDashboard",
        "title": "Surplus: Open Dashboard"
      }
    ],
    "configuration": {
      "title": "Surplus",
      "properties": {
        "surplus.notifications.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable notifications"
        },
        "surplus.notifications.reminderTime": {
          "type": "number",
          "default": 24,
          "description": "Hours before due date to send reminder"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "firebase-admin": "^13.0.2"
  }
}
